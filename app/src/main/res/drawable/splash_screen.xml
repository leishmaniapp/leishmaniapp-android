<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
        </shape>
    </item>
    <item
        android:width="300dp"
        android:height="50dp"
        android:gravity="center">
        <bitmap
